rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && (
        request.auth.token.name == userId || 
        (resource != null && resource.data.uid == request.auth.uid) ||
        (request.resource != null && request.resource.data.uid == request.auth.uid)
      );

      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.token.name == userId;
      }
    }

    // Tick Logs - Immutable audit history
    // Read: authenticated users (query filters by userId client-side)
    // Create: authenticated users can create logs (userId stored for filtering)
    // Update/Delete: DENIED for immutability
    match /tickLogs/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId != null;
      allow update, delete: if false;
    }

    // Resource Defaults - Global column configuration
    // Read: all authenticated users
    // Write: DENIED for clients (only admin Cloud Functions can write)
    match /resourceDefaults/{docId} {
      allow read: if request.auth != null;
      allow create, update, delete: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
